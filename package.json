{
  "name": "@joshuaavalon/fastify-plugin-error",
  "version": "1.0.0",
  "description": "Fastify plugin for handling global errors formatting and error schemas.",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "test": "node --experimental-test-coverage --test \"./dist/**/__tests__/*.{spec,test}.js\"",
    "lint": "eslint"
  },
  "author": "Joshua Avalon",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshuaavalon/fastify-plugin-error.git"
  },
  "bugs": {
    "url": "https://github.com/joshuaavalon/fastify-plugin-error/issues"
  },
  "homepage": "https://github.com/joshuaavalon/fastify-plugin-error#readme",
  "imports": {
    "#fastify": {
      "import": "./dist/fastify/index.js"
    },
    "#formatter": {
      "import": "./dist/formatter/index.js"
    },
    "#handler": {
      "import": "./dist/handler/index.js"
    },
    "#hook": {
      "import": "./dist/hook/index.js"
    },
    "#http": {
      "import": "./dist/http/index.js"
    },
    "#schema": {
      "import": "./dist/schema/index.js"
    },
    "#util": {
      "import": "./dist/util/index.js"
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./http": {
      "import": "./dist/http/index.js"
    }
  },
  "keywords": [
    "fastify",
    "fastify-plugin"
  ],
  "files": [
    "dist/**/*",
    "!dist/**/__tests__/**/*"
  ],
  "devDependencies": {
    "@joshuaavalon/eslint-config-typescript": "^10.0.0",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "fastify": "^5.6.1",
    "globals": "^16.4.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "fastify-plugin": "^5.1.0",
    "typebox": "^1.0.43"
  }
}
